<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_mrporder_inherit_euro" inherit_id="mrp.report_mrporder">
        <xpath expr="//table[@t-if='o.move_raw_ids']/thead/tr/th[1]" position="after">
            <th>Lot/Serial Number</th>
        </xpath>
        <xpath expr="//table[@t-if='o.move_raw_ids']/tbody" position="replace">
            <tbody>
                <t t-if="o.move_raw_ids">
                    <tr t-foreach="o.move_raw_ids.filtered(lambda m: m.state != 'cancel')" t-as="raw_line">
                        <td>
                            <span t-field="raw_line.product_id"/>
                        </td>
                        <td>
                            <tr t-foreach="raw_line.move_line_ids.filtered(lambda l:l.state != 'cancel')" t-as="move_line">
                                <td/>
                                <td>
                                    <span t-field="move_line.lot_id"/>
                                </td>
                                <td>
                                    <t t-if="move_line.state == 'done'">
                                        <span t-field="move_line.qty_done"/>
                                    </t>
                                    <t t-else="">
                                        <span t-field="move_line.product_uom_qty"/>
                                    </t>
                                    <span t-field="move_line.product_uom_id" groups="uom.group_uom"/>
                                </td>
                            </tr>
                        </td>
                        <td t-if="has_product_barcode" width="15%" class="text-center">
                            <t t-if="raw_line.product_id.barcode">
                                <div t-field="raw_line.product_id.barcode" t-options="{'widget': 'barcode', 'width': 600, 'height': 100, 'img_style': 'width:100%;height:35px'}"/>
                            </t>
                        </td>
                    </tr>
                </t>
            </tbody>
        </xpath>
    </template>

</odoo>
