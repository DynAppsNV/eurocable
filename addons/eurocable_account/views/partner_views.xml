<?xml version="1.0"?>
<odoo>

    <record id="view_res_partner_form_inherit_euro_acc" model="ir.ui.view">
        <field name="name">res.partner.view.form.euro.acc</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">95</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']/field[@name='comment']" position="before">
                <group>
                    <field name="send_so_to_inv"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="partner_view_buttons_inherit" model="ir.ui.view">
        <field name="name">res.partner.view.buttons.form.inherit.account</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.partner_view_buttons"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']/group[3]" position="replace">
                <group colspan="2" col="2" name="inv_message" attrs="{'invisible': [('is_company','=',False),('parent_id','!=',False)]}" groups="account.group_warning_account">
                        <separator string="Warning on the Invoice" colspan="4"/>
                        <field name="invoice_warn" nolabel="1" />
                        <field name="invoice_warn_msg" colspan="3" nolabel="1"
                            attrs="{'required':[('invoice_warn','!=', False), ('invoice_warn','!=','no-message')], 'invisible':[('invoice_warn','in',(False,'no-message'))]}"/>
                </group>
                <div name="parent_inv_message" groups="account.group_warning_account" colspan="2" attrs="{'invisible': ['|',('is_company','=',True),('parent_id','=',False)]}">
                    <p>Invoice warnings are managed on <button name="open_commercial_entity" type="object" string="the parent company" class="oe_link"/></p>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
