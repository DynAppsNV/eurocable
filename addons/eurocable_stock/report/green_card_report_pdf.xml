<odoo>
    <template id="report_header_green_card">
        <div class="header">
        </div>
    </template>
    <template id="report_footer_green_card">
        <div class="footer">
        </div>
    </template>

    <template id="greem_card_template_pdf">
        <t t-call="eurocable_stock.report_header_green_card"/>
        <t t-call="eurocable_stock.report_footer_green_card"/>
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o">
                    <t t-foreach="o.move_line_ids_without_package" t-as="ml">
                        <div class="page">
                            <div class="aoe_structure"/>
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)"
                                 style="max-height:45pt;max-width:90%" alt="Company Logo"/>
                            <br/>
                            <t t-if="o.company_id.website">
                                <p style="margin-bottom:0px !important;" t-field="o.company_id.website"></p>
                            </t>
                            <t t-if="o.company_id.email">
                                <p style="margin-bottom:0px !important;" t-field="o.company_id.email"></p>
                            </t>
                            <t t-if="o.partner_id">
                                <p style="margin-bottom:0px !important;" t-field="o.partner_id.name"/>
                            </t>
                            <t t-if="o.origin">
                                <p style="margin-bottom:0px !important;" t-field="o.origin"/>
                            </t>
                            <t t-if="o.sudo().sale_id.client_order_ref">
                                <p style="margin-bottom:0px !important;"
                                   t-field="o.sudo().sale_id.client_order_ref"/>
                            </t>

                            <t t-if="ml.description_picking">
                                <p style="margin-bottom:0px !important;" t-field="ml.description_picking"/>
                            </t>
                        </div>
                        <div style="page-break-after: always;"/>
                    </t>
                </t>
            </t>
        </t>
    </template>
    <record id="report_green_card_pdf" model="ir.actions.report">
        <field name="name">Green Card Pdf</field>
        <field name="model">stock.picking</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">eurocable_stock.greem_card_template_pdf</field>
        <field name="report_file">eurocable_stock.greem_card_template_pdf</field>
        <field name="print_report_name">'Green Card - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_stock_picking"/>
        <field name="paperformat_id" ref="eurocable_stock.paperformat_green_card"/>
        <field name="binding_type">report</field>
        <field name="attachment"></field>
        <field name="attachment_use" eval="True"/>
    </record>
</odoo>
