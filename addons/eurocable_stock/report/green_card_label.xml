<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="greem_card_label">
            <t t-foreach="docs" t-as="o">
                <t t-foreach="o.move_line_ids_without_package" t-as="ml">
                    <t t-translation="off">
                        ^XA
                        ^CF0,30
                        <t t-if="o.company_id.logo">
                             ^FO50,90^FD<t t-esc="o.company_id.log_zpl"/>^FS
                        </t>
                        <t t-if="o.company_id.website">
                            ^FO50,210^FD<t t-esc="o.company_id.website"/>^FS
                        </t>

                        <t t-if="o.company_id.email">
                            ^FO50,250^FD<t t-esc="o.company_id.email"/>^FS
                        </t>

                        <t t-if="o.origin">
                            ^FO50,290^FD<t t-esc="o.origin"/>^FS
                        </t>

                        <t t-if="o.sale_id.client_order_ref">
                            ^FO50,330^FD<t t-esc="o.sale_id.client_order_ref"/>^FS
                        </t>

                        <t t-if="ml.description_picking">
                            ^FO50,370^FD<t t-esc="ml.description_picking"/>^FS
                        </t>
                        ^XZ
                    </t>
                </t>
            </t>
        </template>

        <record id="report_green_card" model="ir.actions.report">
            <field name="name">Green Card (ZPL)</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-text</field>
            <field name="report_name">eurocable_stock.greem_card_label</field>
            <field name="report_file">eurocable_stock.greem_card_label</field>
            <field name="binding_model_id" ref="model_stock_picking"/>
            <field name="paperformat_id" ref="eurocable_stock.paperformat_green_card"/>
            <field name="binding_type">report</field>
        </record>
</odoo>
