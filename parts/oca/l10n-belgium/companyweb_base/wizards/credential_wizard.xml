<odoo>
    <record id="companyweb_credential_wizard" model="ir.ui.view">
        <field name="name">Companyweb Credential Wizard</field>
        <field name="model">companyweb_base.credential_wizard_abstract</field>
        <field name="arch" type="xml">
            <form>
                    <group>
                        <field name="cweb_login" required="1" />
                    </group>
                    <group>
                        <field name="cweb_password" required="1" password="True" />
                    </group>


                    <br />
                    <span>Click here to create your login information: </span>
                    <a
                    href="https://www.companyweb.be/integrations/37/odoo?utm_source=odoo&amp;utm_medium=software&amp;utm_campaign=create_login"
                    title="Follow this link"
                    target="_blank"
                >https://www.companyweb.be</a>
                <footer>

                    <button
                        type="object"
                        name="save_cweb_login_pwd"
                        string="Save"
                        class="oe_highlight"
                    />
                    <button special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
